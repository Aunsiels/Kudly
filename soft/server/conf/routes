# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#Intercept mobile destination
GET     /mobile                     controllers.Application.index
GET     /m                          controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Test of connexion
GET    /connexion                   controllers.Application.connexion(pseudo : String, password : String)

GET    /sound                       controllers.Application.stream

GET    /pwm                         controllers.Application.pwm

GET    /echo                        controllers.Application.echo

POST   /echopost                    controllers.Application.postEcho

POST   /setpwm                      controllers.Application.setPwm

GET    /temp                        controllers.Graph.printTemp

POST   /temp                        controllers.Graph.temp

POST   /sendimage                   controllers.Application.upload

GET    /sendimage                   controllers.Application.sendimage

GET    /image                       controllers.Application.image(name : String)

GET    /streaming                   controllers.Application.streaming

GET    /parent                      controllers.Application.toParent

POST   /cry                         controllers.Graph.cryPost

GET    /cry                         controllers.Graph.cryGet

GET    /activity                    controllers.Graph.activityGet

POST   /activity                    controllers.Graph.activityPost

GET    /presence                    controllers.Graph.presenceGet

POST   /presence                    controllers.Graph.presencePost

GET    /config                      controllers.Application.configFile

GET    /camera                      controllers.Application.cameraRequest

GET    /datajson                    controllers.Graph.dataJSON(title : String, db : String)

GET    /game                        controllers.Application.game

GET    /soundrequest                controllers.Application.sound

GET    /story                       controllers.Application.story

GET    /demo                        controllers.Application.demo

GET    /streamrequest               controllers.Application.streamAsk

GET    /google8458d83522d4b2df.html controllers.Application.google

POST   /contact                     controllers.Contact.contact

GET    /sitemap.xml                 controllers.Application.sitemap
